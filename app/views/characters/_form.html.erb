<%= simple_form_for @character, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :race %>
  <%= f.input :age %>
  <%= f.input :sex %>
  <%= f.input :height %>
  <%= f.input :weight %>
  <%= f.input :eyes %>
  <%= f.input :hair %>
  <%= f.input :user_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                characters_path, :class => 'btn' %>
  </div>
<% end %>
