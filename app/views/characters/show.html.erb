<%- model_class = Character -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="row-fluid">
            <div class="span4">
              <h3>Description</h3>
                <ul class="unstyled">
                    <li><strong><%= model_class.human_attribute_name(:name) %>:</strong>
                    <%= @character.name %></li>
                    <li><strong><%= model_class.human_attribute_name(:sex) %>:</strong>
                    <%= @character.sex %></li>
                    <li><strong><%= model_class.human_attribute_name(:race) %>:</strong>
                    <%= @character.race %></li>
                    <li><strong><%= model_class.human_attribute_name(:height) %>:</strong>
                    <%= @character.height %></li>
                    <li><strong><%= model_class.human_attribute_name(:weight) %>:</strong>
                    <%= @character.weight %></li>
                    <li><strong><%= model_class.human_attribute_name(:eyes) %>:</strong>
                    <%= @character.eyes %></li>
                    <li><strong><%= model_class.human_attribute_name(:hair) %>:</strong>
                    <%= @character.hair %></li>
                </ul>
              
            </div><!--/span-->
            <div class="span4">
              <h3>Atributes</h3>
                 <ul class="unstyled">
                    <li><strong><%= model_class.human_attribute_name(:strength) %>:</strong>
                    <%= @character.strength %></li>
                    <li><strong><%= model_class.human_attribute_name(:dexterity) %>:</strong>
                    <%= @character.dexterity %></li>
                    <li><strong><%= model_class.human_attribute_name(:constitution) %>:</strong>
                    <%= @character.constitution %></li>
                    <li><strong><%= model_class.human_attribute_name(:intelligence) %>:</strong>
                    <%= @character.intelligence %></li>
                    <li><strong><%= model_class.human_attribute_name(:wisdom) %>:</strong>
                    <%= @character.wisdom %></li>
                    <li><strong><%= model_class.human_attribute_name(:charisma) %>:</strong>
                    <%= @character.charisma %></li>
                    
                </ul>
            </div><!--/span-->
            <div class="span4">
              <h3>Stats</h3>
                 <ul class="unstyled">
                    <li><strong><%= model_class.human_attribute_name(:experence) %>:</strong>
                    <%= @character.experence %></li>
                    <li><strong><%= model_class.human_attribute_name(:level) %>:</strong>
                    <%= @character.level %></li>
                    <li><strong><%= model_class.human_attribute_name(:skills) %>:</strong>
                    <%= @character.skills %></li>
                    <li><strong><%= model_class.human_attribute_name(:feats) %>:</strong>
                    <%= @character.feats %></li>
                    <li><strong><%= model_class.human_attribute_name(:hitpoints) %>:</strong>
                    <%= @character.hitpoints %></li>
                    <li><strong><%= model_class.human_attribute_name(:hithdice) %>:</strong>
                    <%= @character.hithdice %></li>
                </ul>
            </div><!--/span-->
          </div><!--/row-->

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              characters_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_character_path(@character), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              character_path(@character),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
